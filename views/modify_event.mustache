<!DOCTYPE html>
<html lang="en">

{{> head}}

<body id="page-top">
    {{> navigation}}

    <!-- Portfolio Grid-->
    <section class="page-section bg-light" id="addEvent2">
        <div class="container">
             <form action="modified" method="post">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="modal-body">
                            <div class="text-center">
                                <h2 class="section-heading text-uppercase">Modificar evento</h2>
                                <section class="page-section" id="contact" style="background-color:#ffffff">
                                    <!--page-section define el espacio entre el titulo y las cajas del form-->
                                    <div class="container">
                                        <div id="contactForm">
                                            <div class="row align-items-stretch mb-5">
                                                <!-- mb-5 define el espacio entre los botones y principio/final-->
                                                <div class="form-group">
                                                    <!-- Title input-->
                                                    <input name="title" class="form-control" type="text"
                                                        placeholder="Título del evento *" value="{{event.titleEvent}}" />
                                                </div>
                                                <div class="form-group form-group-textarea mb-md-0">
                                                    <!-- Description input-->
                                                    <textarea name="descriptionn" class="form-control"
                                                        id="descriptionEvent" placeholder="Descripción *">{{event.descriptionEvent}}</textarea>
                                                </div>

                                                <div>
                                                    <br />
                                                    <br />
                                                    <br />
                                                </div>

                                                {{#tickets}}
                                                    <div class="form-group"> 
                                                        <input id="title{{id}}" name="titlePass" class="form-control" type="text"
                                                            placeholder="Título de la entrada *" value="{{titleTicket}}"/>
                                                    </div>
                                                    <div class="form-group">
                                                            <input id="price{{id}}" name="pricePass" class="form-control" type="int"
                                                                placeholder="Precio de la entrada *" value="{{price}}" />
                                                    </div>
                                                    <div>
                                                        <button class="btn btn-primary btn-xl text-uppercase" type="button" onclick="deleteTicket({{event.id}},{{id}})"
                                                            >Borrar entrada &#9757;</button></div>
                                                        <br />
                                                    </div>
                                                    <input style="opacity:0" name="hola" value="{{id}}"/>
                                                {{/tickets}}

                                                {{^tickets}}
                                                    <h3 class="text-uppercase">Aún no hay entradas disponibles</h3>
                                                {{/tickets}}

                                                <div id="subelementosForm">
                                                        
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            
                <div class="btnAdd">
                    <input class="btn btn-primary btn-xl text-uppercase" type='submit' value='Save' />
                </div>
                </form>
        </div>
        <br></br>
        <div class="btnAdd" id="botones">
            <!-- botones volver, añadir entrada y crear -->
            <a class="btn btn-primary btn-xl text-uppercase" href="/">Volver
                atrás</a>
            <button class="btn btn-primary btn-xl text-uppercase" onclick="addTicketForm();">Añadir
                entrada</button>
        </div>
        <br />
    </section>

    {{> footer}}

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
</body>

</html>